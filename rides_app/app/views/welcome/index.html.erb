<p>Welcome to Stanford Rides!</p>

	<%= form_tag("/rides/create", method: "get") do %>
		<p>
			<%= label_tag(:name, "Name:  ") %>
			<%= text_field_tag(:name) %>
			<%= label_tag(:departure, "Departure:  ") %>
			<%= text_field_tag(:departure) %>
			<%= label_tag(:destination, "Destination:  ") %>
			<%= text_field_tag(:destination) %>
			<%= date_field(:date, :depart_day) %>
			<%= submit_tag("Submit") %>
		</p>
	<% end %>


	<%= form_tag("/rides/create", method: "get") do %>
		<p>
			<%= label_tag(:name, "Name:  ") %>
			<%= text_field_tag(:name) %>
			<%= label_tag(:departure, "Departure:  ") %>
			<%= text_field_tag(:departure) %>
			<%= label_tag(:destination, "Destination:  ") %>
			<%= text_field_tag(:destination) %>
			<%= select_tag :seats, (1...8) %>
			<%= submit_tag("Submit") %>
		</p>
	<% end %>